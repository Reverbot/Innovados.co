---
export interface Props {
  src: ImageMetadata;
  alt: string;
  number: string;
  title: string;
  description: string;
  href: string;
}

const { src, alt, number, title, description, href } = Astro.props;
---

<li class="p-10 rounded-b-xl">
  <div class="flex items-center gap-5 mb-4">
    <span class="text-6xl font-bold text-slate-700">{number}</span>
    <h3 class="text-2xl md:text-4xl font-bold text-blue-900">
      {title}
    </h3>
  </div>
  <p class="text-slate-700">{description}</p>
</li>
