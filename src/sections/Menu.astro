---
import { Image } from "astro:assets";
import logo from "/public/innovados.webp";
---

<header class="bg-[#f0f6ff] py-5 text-slate-800">
  <nav class="mx-auto max-w-7xl py-5 px-6 flex items-center justify-between">
    <a href="/" class="flex items-center">
      <Image src={logo} alt="Innovados" class="h-10 w-auto" />
    </a>

    <!-- Menú principal -->
    <div class="hidden lg:flex space-x-8 items-center">
      <div class="relative group">
        <button class="font-semibold hover:text-cyan-500 flex items-center">
          Servicios de marketing
          <svg
            class="ml-2 w-4 h-4"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>

        <!-- Menú desplegable -->
        <div
          class="absolute z-10 left-0 mt-2 w-64 bg-white shadow-lg rounded-lg opacity-0 group-hover:opacity-100 transition duration-300 transform scale-95 group-hover:scale-100"
        >
          <ul class="divide-y divide-gray-200">
            <!-- <li class="flex items-center gap-4 px-4 py-3 hover:bg-blue-50">
              <span class="bg-blue-100 p-2 rounded-lg">
                <svg
                  class="w-6 h-6 text-blue-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </span>
              <a href="#" class="font-medium text-gray-700">PPC</a>
            </li> -->
            <!-- <li class="flex items-center gap-4 px-4 py-3 hover:bg-blue-50">
              <span class="bg-green-100 p-2 rounded-lg">
                <svg
                  class="w-6 h-6 text-green-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 10h11M9 21V3m12 12h-8m8-8h-8"></path>
                </svg>
              </span>
              <a href="#" class="font-medium text-gray-700">SEO</a>
            </li> -->

            <li class="flex items-center gap-4 px-4 py-3 hover:bg-blue-50">
              <span class="bg-red-100 p-2 rounded-lg">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 text-red-600"
                  ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                  ></path><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"
                  ></path><path d="M3.6 9h16.8"></path><path d="M3.6 15h16.8"
                  ></path><path d="M11.5 3a17 17 0 0 0 0 18"></path><path
                    d="M12.5 3a17 17 0 0 1 0 18"></path></svg
                >
              </span>
              <a
                href="/servicios/desarrollo-web"
                class="font-medium text-gray-700">Servicios Web</a
              >
            </li>
            <li class="flex items-center gap-4 px-4 py-3 hover:bg-blue-50">
              <span class="bg-green-100 p-2 rounded-lg">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 text-green-600"
                  ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                  ></path><path
                    d="M17 11l1.5 -1.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4h4l2 -2"
                  ></path><path d="M13.5 6.5l4 4"></path><path
                    d="M18 22l3.35 -3.284a2.143 2.143 0 0 0 .005 -3.071a2.242 2.242 0 0 0 -3.129 -.006l-.224 .22l-.223 -.22a2.242 2.242 0 0 0 -3.128 -.006a2.143 2.143 0 0 0 -.006 3.071l3.355 3.296z"
                  ></path></svg
                >
              </span>
              <a href="/servicios/copy" class="font-medium text-gray-700"
                >Copywriter</a
              >
            </li>
            <li class="flex items-center gap-4 px-4 py-3 hover:bg-blue-50">
              <span class="bg-yellow-100 p-2 rounded-lg">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6 text-yellow-600"
                  ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                  ></path><path
                    d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
                  ></path><path d="M3 7l9 6l9 -6"></path></svg
                >
              </span>
              <a href="/servicios/email" class="font-medium text-gray-700"
                >Email Marketing</a
              >
            </li>
          </ul>
        </div>
      </div>

      <a href="/blog" class="font-semibold hover:text-cyan-500">Blog</a>
      <a href="/nosotros" class="font-semibold hover:text-cyan-500"
        >Sobre Nosotros</a
      >
      <a
        href="/contacto"
        class="text-white font-semibold bg-gradient-to-r from-emerald-400 via-sky-500 to-emerald-500 px-6 py-2 rounded-full shadow-md transition hover:scale-105"
      >
        Contacto
      </a>
    </div>

    <!-- Menú móvil -->
    <div class="lg:hidden">
      <button id="open-menu" class="text-cyan-500">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Menú móvil desplegable -->
  <div id="mobile-menu" class="hidden fixed inset-0 bg-white z-50 px-6 py-4">
    <div class="flex justify-between items-center mb-6">
      <a href="/">
        <Image src={logo} alt="Innovados" class="h-10 w-auto" />
      </a>
      <button id="close-menu" class="text-cyan-500">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <ul class="space-y-4">
      <li>
        <a href="#servicios" class="font-semibold text-gray-700">Servicios</a>
      </li>
      <li>
        <a href="#funnels" class="font-semibold text-gray-700">Funnels</a>
      </li>
      <li>
        <a href="#email" class="font-semibold text-gray-700">Email Marketing</a>
      </li>
      <li>
        <a href="#contacto" class="font-semibold text-gray-700">Contacto</a>
      </li>
    </ul>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const openMenuButton = document.getElementById("open-menu");
    const closeMenuButton = document.getElementById("close-menu");
    const mobileMenu = document.getElementById("mobile-menu");

    if (openMenuButton) {
      openMenuButton.addEventListener("click", () => {
        mobileMenu?.classList.remove("hidden");
      });
    }

    if (closeMenuButton) {
      closeMenuButton.addEventListener("click", () => {
        mobileMenu?.classList.add("hidden");
      });
    }
  });
</script>
