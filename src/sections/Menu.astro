        class="text-white font-semibold bg-gradient-to-r from-emerald-400 via-sky-500 to-emerald-500 px-6 py-2 rounded-full shadow-md transition hover:scale-105"
      >
        Contacto
      </a>
    </div>

    <!-- Menú móvil -->
    <div class="lg:hidden">
      <button id="open-menu" class="text-cyan-500">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Menú móvil desplegable -->
  <div id="mobile-menu" class="hidden fixed inset-0 bg-white z-50 px-6 py-4">
    <div class="flex justify-between items-center mb-6">
      <a href="/">
        <Image src={logo} alt="Innovados" class="h-10 w-auto" />
      </a>
      <button id="close-menu" class="text-cyan-500">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <ul class="space-y-4">
      <li>
        <a href="#servicios" class="font-semibold text-gray-700">Servicios</a>
      </li>
      <li>
        <a href="#funnels" class="font-semibold text-gray-700">Funnels</a>
      </li>
      <li>
        <a href="#email" class="font-semibold text-gray-700">Email Marketing</a>
      </li>
      <li>
        <a href="#contacto" class="font-semibold text-gray-700">Contacto</a>
      </li>
    </ul>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const openMenuButton = document.getElementById("open-menu");
    const closeMenuButton = document.getElementById("close-menu");
    const mobileMenu = document.getElementById("mobile-menu");

    if (openMenuButton) {
      openMenuButton.addEventListener("click", () => {
        mobileMenu?.classList.remove("hidden");
      });
    }

    if (closeMenuButton) {
      closeMenuButton.addEventListener("click", () => {
        mobileMenu?.classList.add("hidden");
      });
    }
  });
</script>
