<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Nuestros Servicios</title>
  </head>
  <body class="min-h-screen bg-blue-100">
    <section id="servicios" class="max-w-6xl mx-auto py-20">
      <h2
        class="font-extrabold text-3xl text-center mb-4 md:text-5xl text-blue-600"
      >
        Nuestros servicios de calidad
      </h2>
      <ul class="text-slate-800 mt-10 mx-5 grid md:grid-cols-3 gap-5">
        {
          servicios.map((servicio) => (
            <li class=" items-center border-b p-5 pb-10 pl-5 bg-[#f0f6ff]  rounded-b-xl shadow-sm border-t-4 border-t-teal-400">
              <h4 class="text-2xl font-bold mb-5 ">{servicio.titulo}</h4>

              <p class="">{servicio.descripcion}</p>
            </li>
          ))
        }
      </ul>
    </section>
  </body>
</html>

